<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Personal"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tbPersonal"
        android:background="@color/bgBottomNavigation">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ee4d2d"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/person"
            android:layout_gravity="center"
            android:background="@drawable/radius_img"
            android:id="@+id/imgPerson"
            >

        </ImageButton>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/llNamePerson"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="15dp"
            android:textColor="#000">

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="190dp"
                android:id="@+id/txtNamePerson"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd">

            </TextView>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right"
                android:layout_gravity="center"
                >

            </ImageView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="11"
        android:id="@+id/llUserName">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="15dp"
            android:textColor="#000">

        </TextView>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="0386278998"
            android:textSize="18dp"
            android:layout_marginLeft="143dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:id="@+id/txtUserNamePerson"
            >

        </TextView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right"
            android:layout_gravity="center"
            android:layout_weight="1">

        </ImageView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/llEmail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:textColor="#000"
            >

        </TextView>
        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="bokazem69@gmail.com"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="153dp"
            android:id="@+id/txtEmailPerson"
            android:layout_marginRight="5dp">

        </TextView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right"
            android:layout_gravity="center">

        </ImageView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/llDoiMatKhau"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiết lập mật khẩu"
            android:textSize="15dp"
            android:layout_marginRight="235dp"
            android:textColor="#000">

        </TextView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right"
            android:layout_gravity="center">

        </ImageView>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/bgBottomNavigation"
        android:text="Đăng xuất"
        android:id="@+id/btnDangXuat">

    </Button>
</LinearLayout>