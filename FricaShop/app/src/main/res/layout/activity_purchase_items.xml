<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="15dp"
        android:textColor="#000"
        android:id="@+id/txtSTT"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center">

    </TextView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/comment_status"
        android:id="@+id/imgPurchase">

    </ImageView>
    <TextView
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNamePurchase"
        android:text="Máy ảnh Sony"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:layout_marginRight="20dp"
        android:textSize="15dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuantityPurchase"
        android:text="10"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginRight="39dp">

    </TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="19.000.000đ"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:id="@+id/txtPricePurchase">

    </TextView>

</LinearLayout>